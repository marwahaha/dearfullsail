= form_for @missife do |f|
  -if @missife.errors.any?
    #error_explanation
      %h2= "#{pluralize(@missife.errors.count, "error")} prohibited this missife from being saved:"
      %ul
        - @missife.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :message
    = f.text_field :message
  .field
    = f.label :date
    = f.date_select :date
  .field
    = f.label :type
    = f.text_field :type
  .actions
    = f.submit 'Save'
